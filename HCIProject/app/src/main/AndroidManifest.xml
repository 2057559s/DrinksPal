<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.hci.hciproject">

    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="true" />

    <application
        android:name=".util.HCIApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.main_activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.bar.BarActivity"
            android:label="@string/bars_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.drink.DrinkActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".views.price_range.PriceRangeActivity"
            android:label="@string/price_range_title"
            android:screenOrientation="portrait" />
        <activity android:name=".views.drink_type.DrinkTypeActivity"
            android:label="@string/drink_type_title"
            android:screenOrientation="portrait"/>
        <activity android:name=".views.drink_type_bars.DrinkTypeBarsActivity"
            android:label="@string/drink_type_title"
            android:screenOrientation="portrait" />
        <activity android:name=".views.bar_results.BarResultsActivity"
            android:label="@string/bars_results_title"
            android:screenOrientation="portrait" />
        <activity android:name=".views.drink_results.ListDrinkResultsActivity"
            android:label="@string/drink_results_title"
            android:screenOrientation="portrait"/>
    </application>

</manifest>