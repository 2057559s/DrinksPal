<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.hci.hciproject">

    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="true" />

    <application
        android:name=".util.HCIApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DrinkActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".PriceRangeActivity" />
        <activity android:name=".add_new_drink" />
        <activity android:name=".DrinkTypeActivity" />
        <activity android:name=".DrinkTypeBarsActivity"></activity>
    </application>

</manifest>